{
  "name": "Overlay V1 Core",
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write 'contracts/**/*.sol' --verbose --config './.prettierrc.json'",
    "format:check": "prettier --check '**/*.sol' --config './.prettierrc.json'",
    "format:fix": "pretty-quick --pattern '**/*.sol' --staged --verbose --config './.prettierrc.json'",
    "hint": "solhint \"contracts/**/*.sol\""
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "pretty-quick": "^3.1.3",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
